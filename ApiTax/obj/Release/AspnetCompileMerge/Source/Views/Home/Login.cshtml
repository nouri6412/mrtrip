
@{
    ViewBag.Title = "ورود به سیستم";
}

<h2>ورود به سیستم</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Login Failed, check details");
    <div class="container">

        <fieldset>
            <div class="row">
                <div class="col-12">
                    <label>کد ملی</label>
                    <input id="Phone" name="Phone" placeholder="NationalCode" class="form-control" />
                </div>
                <hr />

                <div class="col-12">
                    <label>رمز عبور</label>
                    <input id="Password" name="Password" placeholder="Password" class="form-control" type="password" />
                </div>
            </div>
<hr />
    <input type="submit" value="ورود به سیستم" class="btn btn-primary" />
</fieldset>
</div>
}
