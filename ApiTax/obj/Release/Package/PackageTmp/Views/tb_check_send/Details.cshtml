<p>
    @Html.ActionLink("بازگشت به لیست", "Index",new {send_id=Model.SendId })
</p>

<script type="text/javascript">



    var invoice_data =  @Html.Raw(Model.invoiceData);
    var response_data = @Html.Raw(Model.CheckResponse);


           		var jsonViewer = new JSONViewer();
        document.querySelector("#json-invoice-data").appendChild(jsonViewer.getContainer());
        jsonViewer.showJSON(invoice_data, null, 1);

