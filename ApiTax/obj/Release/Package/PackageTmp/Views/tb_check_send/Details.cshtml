@model ApiTax.Models.tb_check_send

@{
    ViewBag.Title = "Details";

   
}

<h2>پاسخ استعلام</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            تاریخ استعلام
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CheckDate)
        </dd>

        <dt>
            وضعیت استعلام
        </dt>

        <dd>
            @Html.DisplayFor(model => model.state)
        </dd>

        <dt>
            شناسه یکتای صورت حساب
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UID)
        </dd>

        <dt>
            شناسه مرجع
