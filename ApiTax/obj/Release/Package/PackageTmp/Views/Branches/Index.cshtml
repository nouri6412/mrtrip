@model IEnumerable<ApiTax.Models.Branch>

@{
    var Client = ViewBag.Client as ApiTax.Models.Client;
    string page_title = "لیست شعب" + " " + Client.ID;

    ViewBag.Title = page_title;
}

<h2>@page_title</h2>

<p>
    @Html.ActionLink("ایجاد کردن", "Create", new { ClientID = Client.ID },new { @class="btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BranchName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManagerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BranchNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BranchAddress)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.BranchName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PhoneNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ManagerName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ZipCode)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BranchNum)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BranchAddress)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.BranchID }) |
        @Html.ActionLink("Details", "Details", new { id = item.BranchID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.BranchID })
    </td>
</tr>
    }

</table>
<div>
    @Html.ActionLink("بازگشت به لیست", "Index", "Clients", new { PersonId = Client.PersonId }, new { })
</div>
