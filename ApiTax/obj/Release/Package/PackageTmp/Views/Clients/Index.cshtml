@model IEnumerable<ApiTax.Models.Client>

@{

    var Person = ViewBag.Person as ApiTax.Models.tb_person;
    string page_title = "لیست حافظه های مالیاتی" + " " + Person.Fname + " " + Person.Lname;
    if (Person.PersonTypeId == 1)
    {
        page_title = "لیست حافظه های مالیاتی" + " " + Person.ComapnyName;
    }
        ViewBag.Title = page_title;
}

<h2>@page_title</h2>

<p>
    @Html.ActionLink("ایجاد کردن", "Create", new { PersonId=Person.PersonID},new { @class="btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClientID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublicKey)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrivateKey)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Econo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParticipationID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TraceCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tins)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClientID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublicKey)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrivateKey)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Econo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParticipationID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TraceCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tins)
        </td>
        <td>
            @Html.ActionLink("شعب", "Index", "Branches", new { ClientID = item.ID }, new { }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>