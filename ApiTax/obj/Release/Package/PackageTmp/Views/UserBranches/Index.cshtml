@model IEnumerable<ApiTax.Models.UserBranch>

@{
       var User = ViewBag.UserSelected as ApiTax.Models.User;
    string page_title = "لیست مجوز شعب" + " " + User.Fname+" "+User.LastName;

    ViewBag.Title = page_title;
}

<h2>@page_title</h2>

<p>
    @Html.ActionLink("ایجاد کردن", "Create", new { UserID = User.UserID },new { @class="btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Branch.BranchName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Fname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Branch.BranchName)
        </td>
        <td>
            @item.User.Fname @item.User.LastName
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UserBranchId }) |
            @Html.ActionLink("Details", "Details", new { id=item.UserBranchId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.UserBranchId })
        </td>
    </tr>
}

</table>
