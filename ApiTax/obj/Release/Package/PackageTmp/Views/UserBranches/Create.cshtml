@model ApiTax.Models.UserBranch

@{
    ViewBag.Title = "جدید";
       long UserID = ViewBag.UserID;
}

<h2>گزینه جدید</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>UserBranch</h4>
    <hr />
    <input type="hidden" id="UserID" name="UserID" value="@UserID" />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.BrancheID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("BrancheID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BrancheID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="ذخیره" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("بازگشت به لیست", "Index",new { UserID =UserID })
</div>
