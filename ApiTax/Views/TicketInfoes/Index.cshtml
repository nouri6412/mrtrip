@using PagedList.Mvc
@model  PagedList.IPagedList<ApiTax.Entities.TicketInfo>

@{
    ViewBag.Title = "Index";
    int page1 = ViewBag.page_index;
    int index = (page1 - 1) * 15;
}

<div class="kt-portlet__head kt-portlet__head--lg">
    <div class="kt-portlet__head-label">
        <span class="kt-portlet__head-icon"><i :class="modelIcon"></i></span>
        <h3 class="kt-portlet__head-title">
            RWS List
        </h3>
    </div>
    <div class="kt-portlet__head-toolbar">
        <div class="kt-portlet__head-wrapper">
            <div class="kt-portlet__head-actions">

                @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-outline-success btn-elevate btn-icon-sm" })

            </div>
        </div>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            SellSerial
        </th>
        <th>
            FromStationName
        </th>
        <th>
            ToStationName
        </th>
        <th>
            ShExiteDate
        </th>
        <th>
            ExiteTime
        </th>
        <th>
            Degree
        </th>
        <th>
            WagonNo
        </th>
        <th>
            CompartmentNo
        </th>
        <th>
            SexName
        </th>
        <th>
            TrainNo
        </th>
        <th>
            WagonTypeName
        </th>
        <th>
            RationName
        </th>
        <th>
            Status
        </th>
        <th>
            Message
        </th>
        <th>
            Created
        </th>
        <th>
            Updated
        </th>
        <th>
            TrackID
        </th>
        <th>
            RailWayRequest
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SellSerial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FromStationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToStationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShExiteDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExiteTime)
            </td>
