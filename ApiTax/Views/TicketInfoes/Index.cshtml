            <td>
                @Html.DisplayFor(modelItem => item.WagonNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompartmentNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SexName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WagonTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrackID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RailWayRequest.Mobile)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
<hr />

<div id="container" style="margin-left: 20px">
    <p></p>
    <p></p>
    <div class="pagination" style="margin-left: 400px">
        صفحه @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
